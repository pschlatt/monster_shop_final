<%= form_for @user do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>

  <%= fields_for :addresses do |a| %>
        <%= a.label :streetname %>
        <%= a.text_field :streetname %>

        <%= a.label :city %>
        <%= a.text_field :city %>

        <%= a.label :state %>
        <%= a.text_field :state %>

        <%= a.label :zip %>
        <%= a.text_field :zip %>

    <%= f.submit 'Register' %>
  <% end %>
<% end %>
