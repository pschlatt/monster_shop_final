<%= form_tag profile_path do %>

<%= label_tag :streetname %>
<%= text_field_tag :streetname %>

<%= label_tag :city %>
<%= text_field_tag :city %>

<%= label_tag :state %>
<%= text_field_tag :state %>

<%= label_tag :zip %>
<%= number_field_tag :zip %>
<br>

<%= label_tag :nickname, "home" %>
<%= radio_button_tag :nickname, "home" %>
<br>

<%= label_tag :nickname, "work" %>
<%= radio_button_tag :nickname, "work" %>
<br>

<%= label_tag :nickname, "alternate" %>
<%= radio_button_tag :nickname, "alternate" %>
<br>

<%= submit_tag "Submit" %>

<% end %>
